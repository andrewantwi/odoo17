<odoo>
    <!-- Tree View for Doctor Model -->
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="gender"/>
                <field name="specialty"/>
                <field name="shift"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Doctor Model -->
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_of_birth"/>
                        <field name="gender"/>
                        <field name="specialty"/>
                        <field name="shift"/>
                    </group>
                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids" mode="tree,form"/>
                        </page>
                        <page string="Appointments">
                            <field name="appointment_ids" mode="tree,form"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[Command.clear(), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_doctor_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_doctor_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Doctor
            </p>
        </field>
    </record>


</odoo>
